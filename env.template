# LLM API Configuration
# Choose either OpenAI or AWS Bedrock

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# AWS Configuration (if using Bedrock or other AWS services)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_SESSION_TOKEN=your_aws_session_token_here_if_using_temporary_credentials
AWS_REGION=us-east-1

# Amplify Configuration
NEXT_PUBLIC_AWS_REGION=us-east-1
NEXT_PUBLIC_AWS_USER_POOL_ID=your_cognito_user_pool_id
NEXT_PUBLIC_AWS_USER_POOL_WEB_CLIENT_ID=your_cognito_client_id

# Application Configuration
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_LLM_PROVIDER=bedrock
NEXT_PUBLIC_LLM_MODEL=anthropic.claude-3-haiku-20240307-v1:0

# Moderator Authentication (Optional - adds to default credentials)
NEXT_PUBLIC_MODERATOR_USERNAME=your_custom_username
NEXT_PUBLIC_MODERATOR_PASSWORD=your_custom_password

# Additional Admin Account (Optional)
NEXT_PUBLIC_ADMIN_USERNAME=your_admin_username
NEXT_PUBLIC_ADMIN_PASSWORD=your_admin_password
